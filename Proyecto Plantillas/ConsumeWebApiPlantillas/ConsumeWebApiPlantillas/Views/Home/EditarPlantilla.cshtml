@model Plantilla

@{
    ViewData["Title"] = ViewBag.Accion ?? "Nueva Plantilla";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="GuardarPlantilla" method="post">
    @if (Model.id != 0)
    {
        <input type="hidden" asp-for="id" />
    }
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contenido"></label>
        <textarea asp-for="Contenido" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
